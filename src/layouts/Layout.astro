---
import "../styles/global.css";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <!-- Fonts: Instrument Serif & Inter -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Instrument+Serif:ital@0;1&family=Inter:wght@300;400;500&display=swap"
      rel="stylesheet"
    />
    <!-- Preload the desk background so it's ready before CSS/JS execute -->
    <link
      rel="preload"
      href="/desk.png"
      as="image"
      fetchpriority="high"
      media="(min-width: 768px)"
    />
  </head>
  <body
    class="bg-stone-50 overflow-x-hidden md:overflow-hidden w-screen min-h-screen m-0 p-0 text-[#111111]"
  >
    <!-- Desk background moved to index.astro -->
    <!-- Mobile Hero Fallback -->
    <div
      class="md:hidden w-full h-[40vh] bg-cover bg-center bg-no-repeat relative opacity-0 animate-[fadeIn_1.5s_ease-out_forwards]"
      style="background-image: url('/desk.png');"
    >
      <div
        class="absolute inset-0 bg-gradient-to-t from-stone-50 to-transparent"
      >
      </div>
    </div>

    <!-- App Content Wrapper -->
    <main
      class="relative z-10 w-full min-h-screen md:h-screen flex flex-col md:flex-row"
    >
      <slot />
    </main>
  </body>
</html>
